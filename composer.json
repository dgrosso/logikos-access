{
    "name": "logikos/access",
    "license": "MIT",
    "authors": [{
        "name": "Todd Empcke",
        "email": "tempcke@logikostech.net"
    }],
    "require": {
        "php": "^7.0",
        "ext-pdo": "*",
        "zendframework/zend-permissions-acl": "^2.7",
        "nette/database": "^2.4",
        "logikos/util": "^2.2",
        "logikos/database": "^0.1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpstan/phpstan": "^0.9.2"
    },
    "autoload": {
        "psr-4": {
            "Logikos\\Access\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LogikosTest\\Access\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "vendor/bin/phpunit",
            "vendor/bin/phpstan analyse src --level=7"
        ],
        "test-only": [
            "vendor/bin/phpunit"
        ]
    }
}
